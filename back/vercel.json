
{
  "version": 2,
  "builds": [
    {
      "src": "src/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "src/{views,public}/**/*"
      }
    }
  ],
  "routes": [
    { "src": "/(css|img|js|favicon\\.ico)/(.*)", "dest": "src/public/$1/$2" },
    { "src": "/api/(.*)", "dest": "src/api/index.js" },
    { "src": "/dashboard/(.*)", "dest": "src/api/index.js" }    
  ]
}